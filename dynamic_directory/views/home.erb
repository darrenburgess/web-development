<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><%= @title %></title>
</head>

<body>

  <h1><%= @title %></h1>
  <% @files.each do |file| %> 
    <% path = "public/#{file.delete("^0-9").to_i}"%>
    <p><a href="<%=path%>"><%= file %></a></p>
  <% end %>

</body>
</html>
